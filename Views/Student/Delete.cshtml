@model Student
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-dark">
            <div class="card-header bg-dark text-white">
                <h3 class="card-title mb-0">Delete Student</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Are you sure you want to delete the student "@Model.Name"?</strong>
                    
                </div>

                <div class="student-details mb-3">
                    <h5>Student Details:</h5>
                    <ul class="list-unstyled">
                        <li><strong>Name:</strong> @Model.Name</li>
                        <li><strong>Email:</strong> @Model.Email</li>
                        <li><strong>Course:</strong> @Model.Course</li>
                        <li><strong>Enrollment Date:</strong> @Model.EnrollmentDate.ToShortDateString()</li>
                    </ul>
                </div>

                <form asp-action="DeleteConfirm" asp-controller="Student">
                    <input asp-for="Id" hidden />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" asp-controller="Student" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete Student</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>