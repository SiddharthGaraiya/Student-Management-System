@model IEnumerable<Student>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Students</h1>
    <a class="btn btn-success" asp-action="Create" asp-controller="Student">
        <i class="bi bi-plus-circle"></i> Create New Student
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Enrollment Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Course</td>
                            <td>@student.EnrollmentDate.ToShortDateString()</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>